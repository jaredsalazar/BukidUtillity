<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMainStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/btviewCam"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_gravity="left|bottom"
            android:width="175dp"
            android:text="@string/colormeter"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btAbout"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_gravity="right|bottom"
            android:width="175dp"
            android:text="@string/about"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btviewMap"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_gravity="left|top"
            android:width="175dp"
            android:text="@string/viewmap"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btsendValues"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_gravity="right|top"
            android:layout_marginStart="73dp"
            android:width="175dp"
            android:text="@string/sendValue"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>
</RelativeLayout>
